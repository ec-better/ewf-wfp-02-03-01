<?xml version="1.0" encoding="us-ascii"?>
<application xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" id="application">
  <jobTemplates>
    <jobTemplate id="tiling">
      <streamingExecutable>/application/tiling/run</streamingExecutable>
        <defaultParameters>
            <parameter id='_T2Username' title='Username' abstract='Username' scope="runtime"></parameter>
            <parameter id='_T2ApiKey' title='API key' abstract='API key' scope="runtime"></parameter>
        </defaultParameters>
       <defaultJobconf>
        <property id="ciop.job.max.tasks">1</property>
        <property id="mapred.task.timeout">10800000</property>
      </defaultJobconf>
    </jobTemplate>
    <jobTemplate id="subtile">
      <streamingExecutable>/application/subtile/run</streamingExecutable>
        <defaultParameters>
            <parameter id='_T2Username' title='Username' abstract='Username' scope="runtime"></parameter>
            <parameter id='_T2ApiKey' title='API key' abstract='API key' scope="runtime"></parameter>
            <parameter id='band' title='Value to smooth and gap-fill' abstract='Value to smooth and gap-fill' scope="runtime">
                <options>
                    <option>NDVI</option>
                    <option>B01</option>
                    <option>B02</option>
                    <option>B03</option>
                    <option>B04</option>
                    <option>B05</option>
                    <option>B06</option>
                    <option>B07</option>
                    <option>B08</option>
                    <option>B8A</option>
                    <option>B09</option>
                    <option>B11</option>
                    <option>B12</option>
                    <default>B01</default>
                </options>
             </parameter>   
            
        </defaultParameters>
      <defaultJobconf>
          <property id="mapred.task.timeout">14400000</property> <!-- 4 hours -->
      </defaultJobconf>
    </jobTemplate>
    <jobTemplate id="merge">
      <streamingExecutable>/application/merge/run</streamingExecutable>
         <defaultParameters>
        <parameter id='band' title='Value to smooth and gap-fill' abstract='Value to smooth and gap-fill' scope="runtime">
                <options>
                    <option>NDVI</option>
                    <option>B01</option>
                    <option>B02</option>
                    <option>B03</option>
                    <option>B04</option>
                    <option>B05</option>
                    <option>B06</option>
                    <option>B07</option>
                    <option>B08</option>
                    <option>B8A</option>
                    <option>B09</option>
                    <option>B11</option>
                    <option>B12</option>
                    <default>B01</default>
                </options>
             </parameter> 
              </defaultParameters>
      <defaultJobconf>
        <property id="ciop.job.max.tasks">1</property>
        <property id="mapred.task.timeout">14400000</property> <!-- 4 hours -->
      </defaultJobconf>
    </jobTemplate>
  </jobTemplates>
    <workflow id="ewf-wfp-02-03-01" title="Regular Sentinel-2 smoothed and gap-filled NDVI timeseries" abstract="This is a short description">
    <workflowVersion>1.0</workflowVersion>
    <node id="tiling">
      <job id="tiling"/>
      <sources>
        <source id="source" title="ARD S2 L2A references" abstract="ARD S2 L2A references" refid="string:list" scope="runtime"></source>
      </sources>
    </node>
    <node id="subtile">
      <job id="subtile"/>
      <sources>
        <source refid="wf:node">tiling</source>
      </sources>
    </node>
        <node id="merge">
      <job id="merge"/>
      <sources>
        <source refid="wf:node">subtile</source>
      </sources>
    </node>
  </workflow>
</application>
